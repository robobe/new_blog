<?xml version="1.0"?>
<robot name="simple_arm">

  <!-- ===================== -->
  <!-- Base Link             -->
  <!-- ===================== -->
  <link name="base_link">

    <!-- Visual -->
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>

    <!-- Collision -->
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </collision>

    <!-- Inertia (solid box approx) -->
    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="2.0"/>
      <inertia
        ixx="0.0067"
        ixy="0.0"
        ixz="0.0"
        iyy="0.0067"
        iyz="0.0"
        izz="0.0067"/>
    </inertial>

  </link>

  <!-- ===================== -->
  <!-- Arm Link              -->
  <!-- ===================== -->
  <link name="arm_link">

    <!-- Visual -->
    <visual>
      <origin xyz="0.2 0 0.025"/>
      <geometry>
        <box size="0.4 0.05 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>

    <!-- Collision -->
    <collision>
      <origin xyz="0.2 0 0.025"/>
      <geometry>
        <box size="0.4 0.05 0.05"/>
      </geometry>
    </collision>

    <!-- Inertia -->
    <inertial>
      <origin xyz="0.2 0 0.025"/>
      <mass value="0.5"/>
      <inertia
        ixx="0.002"
        ixy="0.0"
        ixz="0.0"
        iyy="0.02"
        iyz="0.0"
        izz="0.02"/>
    </inertial>

  </link>

  <!-- ===================== -->
  <!-- Revolute Joint        -->
  <!-- ===================== -->
  <joint name="shoulder_joint" type="revolute">

    <parent link="base_link"/>
    <child link="arm_link"/>

    <!-- Joint position relative to base -->
    <origin xyz="0 0 0.1" rpy="0 0 0"/>

    <!-- Rotate around Z axis -->
    <axis xyz="0 0 1"/>

    <!-- Joint limits -->
    <limit
      lower="-1.57"
      upper="1.57"
      effort="20"
      velocity="2.0"/>

    <!-- Optional damping (important for stability) -->
    <dynamics damping="0.1" friction="0.01"/>

  </joint>

</robot>
